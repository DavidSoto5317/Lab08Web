{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": [2, "never"],
        "indent": ["error", 2],
        "quotes": [2, "single", "avoid-escape"],
        "react/prop-types": 0,
        "react/jsx-filename-extension": 0,
        "jsx-quotes": ["error", "prefer-single"],
        "react/jsx-no-bind": 0
    }
}